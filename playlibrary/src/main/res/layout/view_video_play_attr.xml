<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="06dp"
            android:layout_marginTop="06dp"
            android:text="10.00/50:45"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="match_parent"
            android:layout_height="05dp"
            android:layout_marginTop="08dp"
            android:indeterminateOnly="false"
            android:max="100"
            android:maxHeight="010dp"
            android:minHeight="010dp"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar_video_attr_style" />
    </LinearLayout>


</RelativeLayout>