<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.snow.playl.view.BaseVideoPlayView
        android:id="@+id/video_play_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="020dp"
        android:layout_marginRight="020dp"
        android:layout_marginBottom="030dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_now_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <com.snow.playl.seekbar.MusicSeekBar
            android:id="@+id/sb_progress"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="010dp"
            android:layout_marginRight="010dp"
            android:layout_weight="1"
            android:background="#00000000"
            app:max="100"
            app:model="1"
            app:thum="@mipmap/ic_chinese_course_progress"
            app:thumHeight="14dp"
            app:thumWidth="14dp"
            app:trackFColor="#cccccc"
            app:trackSColor="#cccccc"
            app:trackSize="2dp" />

        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>